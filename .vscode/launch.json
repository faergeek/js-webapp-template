{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server",
      "type": "pwa-node",
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Firefox",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:8080/",
      "webRoot": "${workspaceFolder}",
      "clearConsoleOnReload": true,
      "suggestPathMappingWizard": false
    },
    {
      "name": "Chrome",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "userDataDir": false
    }
  ]
}
