{
  "private": true,
  "main": "build/main.js",
  "scripts": {
    "prettier": "prettier --write .",
    "prettier:check": "prettier --list-different .",
    "lint": "eslint --max-warnings 0 .",
    "dev": "webpack watch --mode=development",
    "build": "webpack --mode=production",
    "build:analyze": "webpack watch --mode=production",
    "cleanup": "rimraf build",
    "start": "node ."
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "extends": "@faergeek",
    "overrides": [
      {
        "files": "*",
        "extends": "@faergeek/eslint-config/node"
      },
      {
        "files": "src/**/*",
        "extends": "@faergeek/eslint-config/react"
      }
    ]
  },
  "browserslist": {
    "production": [
      "> 1%",
      "not IE <= 11",
      "not OperaMini all",
      "not dead"
    ],
    "development": [
      "last 1 Chrome version",
      "last 1 ChromeAndroid version",
      "last 1 Edge version",
      "last 1 Firefox version",
      "last 1 FirefoxAndroid version",
      "last 1 iOS version",
      "last 1 Opera version",
      "last 1 OperaMobile version",
      "last 1 Safari version"
    ]
  },
  "dependencies": {
    "@curi/react-dom": "^2.0.4",
    "@curi/router": "^2.0.1",
    "@hickory/in-memory": "^2.0.0",
    "clsx": "^1.1.1",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "source-map-support": "^0.5.13"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.7.4",
    "@faergeek/eslint-config": "^2.0.0",
    "@faergeek/make-webpack-config": "^6.0.0",
    "@hickory/browser": "^2.0.1",
    "bulma": "^0.9.1",
    "core-js": "^3.2.1",
    "eslint": "^7.15.0",
    "postcss": "^8.3.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.0",
    "webpack": "5.38.1",
    "webpack-cli": "4.4.0"
  }
}
