{
  "root": true,
  "extends": "@faergeek",
  "overrides": [
    {
      "files": "*",
      "extends": "@faergeek/eslint-config/node"
    },
    {
      "files": "src/**/*",
      "extends": "@faergeek/eslint-config/react",
      "settings": {
        "linkComponents": ["Button", { "name": "Link", "linkAttribute": "to" }]
      }
    },
    {
      "files": "**/*.ts?(x)",
      "extends": "@faergeek/eslint-config/typescript"
    }
  ]
}
